---
const {variant, size} = Astro.props;
---

<button class={variant + " " + size}><slot /></button>

<style>
    button{
        padding: 1rem;
    }

    .primary{
        background-color: blueviolet;
        color: white;
    }

    .secondary{
        background-color: white;
       color: blueviolet;
    }

.small{
    font-size: 1rem;
}

.medium{
    font-size: 2rem;
}

.large{
    font-size: 3rem;
}
</style>